<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trueButtonColor"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="392dp"
        android:layout_height="0dp"
        android:background="@drawable/pencilbackground"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="349dp"
            android:layout_height="79dp"
            android:background="@drawable/box"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="44dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="59dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#F3FFFFFF"
                app:srcCompat="@drawable/username" />

            <EditText
                android:id="@+id/nickText"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:ems="10"
                android:foreground="#00734C4C"
                android:hint="Username"
                android:inputType="textPersonName"
                android:textColor="#332C2C"
                android:textColorHint="@color/black"
                tools:layout_conversion_absoluteHeight="32dp"
                tools:layout_conversion_absoluteWidth="210dp" />

            <Space
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="79dp"
            android:background="@drawable/box"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="41dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="364dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E4FFFFFF"
                app:srcCompat="@drawable/password" />

            <EditText
                android:id="@+id/psswdText"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#332C2C"
                android:textColorHint="@color/black"
                tools:layout_conversion_absoluteHeight="36dp"
                tools:layout_conversion_absoluteWidth="210dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:id="@+id/lgnButton"
            android:layout_width="104dp"
            android:layout_height="32dp"
            android:background="@drawable/mybutton"
            android:fontFamily="casual"
            android:gravity="center|center_horizontal"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="88dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="103dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="115dp"
            android:layout_height="32dp"
            android:background="@drawable/mybutton"
            android:fontFamily="casual"
            android:gravity="center|center_horizontal"
            android:text="Register"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="105dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="113dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="#C1000000"
            android:gravity="center"
            android:text="https://github.com/meteahmetyakar/"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>