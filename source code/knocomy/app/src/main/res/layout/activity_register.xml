<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pencilbackground"
    tools:context=".register">

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="689dp"
        android:layout_marginBottom="42dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="79dp"
            android:background="@drawable/box"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="44dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="59dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#F3FFFFFF"
                app:srcCompat="@drawable/username" />

            <EditText
                android:id="@+id/nickText"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:ems="10"
                android:foreground="#00734C4C"
                android:hint="Enter Your Nickname"
                android:inputType="textPersonName"
                android:textColor="#332C2C"
                android:textColorHint="@color/black"
                tools:layout_conversion_absoluteHeight="32dp"
                tools:layout_conversion_absoluteWidth="210dp" />

            <Space
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="79dp"
            android:background="@drawable/box"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="41dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="364dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E4FFFFFF"
                app:srcCompat="@drawable/password" />

            <EditText
                android:id="@+id/psswdText"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Enter Your Password"
                android:inputType="textPassword"
                android:textColor="#332C2C"
                android:textColorHint="@color/black"
                tools:layout_conversion_absoluteHeight="36dp"
                tools:layout_conversion_absoluteWidth="210dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="79dp"
            android:background="@drawable/box"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E4FFFFFF"
                app:srcCompat="@drawable/password" />

            <EditText
                android:id="@+id/confirmPsswd"
                android:layout_width="212dp"
                android:layout_height="37dp"
                android:background="#005A4B4B"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Confirm Your Password"
                android:inputType="textPassword"
                android:lineSpacingExtra="8sp"
                android:textColor="#332C2C"
                android:textColorHint="@color/black"
                tools:layout_conversion_absoluteHeight="36dp"
                tools:layout_conversion_absoluteWidth="210dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="119dp"
            android:layout_height="31dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/mybutton"
            android:fontFamily="casual"
            android:text="REGISTER"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/backBtnRegister"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:background="@drawable/mybutton"
            android:fontFamily="casual"
            android:text="Back"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>